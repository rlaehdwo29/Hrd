<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/titleBar"
    android:layout_width="fill_parent"
    android:layout_height="44dp"
    android:background="#086bef"
    android:gravity="center_vertical"
    android:paddingLeft="10dip"
    android:paddingRight="10dip"
    android:paddingTop="5dp"
    android:visibility="visible" >

<ImageButton
    android:id="@+id/leftImageButton"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:layout_alignParentTop="false"
    android:layout_centerVertical="true"
	android:scaleType="centerInside"
    android:visibility="invisible"
	android:background="@null"
	android:src="@drawable/btn_back"
	android:cropToPadding="false"
	android:paddingBottom="10dp"
	android:paddingLeft="5dp"
	android:paddingRight="10dp"
	android:paddingTop="10dp">

</ImageButton>





	<TextView
	    android:id="@+id/sub_title"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentLeft="false"
		android:layout_weight="1"
	    android:ellipsize="end"
	    android:gravity="left"
	    android:singleLine="true"
	    android:textColor="#e5e5e5"
	    android:textSize="20dp"
	    android:textStyle="bold" />



	<ImageButton
	    android:id="@+id/rightImageButton"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentRight="true"
	    android:layout_alignParentTop="false"
	    android:layout_centerVertical="true"
		android:visibility="invisible"
		android:background="@null"
		android:paddingBottom="10dp"
		android:paddingLeft="10dp"
		android:paddingRight="5dp"
		android:paddingTop="10dp" />


	<ImageButton
	    android:id="@+id/sub_leftImageButton"
	    android:layout_width="60dp"
	    android:layout_height="30dp"
	    android:layout_alignParentLeft="true"
	    android:layout_alignParentTop="false"
		android:padding="0dip"
	    android:visibility="gone"
		android:layout_centerVertical="true" />


	<Button
	    android:id="@+id/sub_rightImageButton"
	    android:layout_width="wrap_content"
	    android:layout_height="30dp"
	    android:layout_centerVertical="true"
	    android:padding="5dip"
	    android:visibility="gone" android:layout_alignParentRight="true"
	    android:layout_alignParentTop="false" android:text="로그아웃" android:textColor="#fff"
		android:background="@null"
		android:textSize="14sp" />


	<ImageButton
	    android:id="@+id/btn_home"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentLeft="true"
	    android:layout_alignParentTop="false"
	    android:layout_centerVertical="true"
	    android:padding="0dip"
	    android:visibility="gone" android:layout_marginTop="-3dp"/>

		<TextView
		    android:id="@+id/titleText"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:layout_centerHorizontal="true"
		    android:layout_centerVertical="true"
		    android:layout_marginLeft="5dp"
		    android:layout_marginRight="5dp"
			android:layout_weight="1"
		    android:ellipsize="end"
		    android:gravity="center"
		    android:singleLine="true"
		    android:text=""
		    android:textColor="#e5e5e5"
		    android:textSize="20dp" >

</TextView>
</RelativeLayout>
